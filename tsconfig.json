{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "pretty": true,
        "maxNodeModuleJsDepth": 1,
        "strictNullChecks": true,
        "declaration": false,
        "removeComments": false,
        "sourceMap": false,
        "inlineSourceMap": false,
        "inlineSources": false,
        // "sourceRoot": "http://localhost/",//PATH or URL
        // "mapRoot": "http://localhost/",//PATH or URL
        "rootDir": "./src",
        "outDir": "./bin"
    },
    "exclude": [
        "bin",
        "lib",
        "node_modules/gots/src",
        "node_modules/tslabs/src"
    ]
}
